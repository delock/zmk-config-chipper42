ZMK_COMBO(five,  &kp N5,        LM0 LT0,     DEF, COMBO_TERM_FAST)
ZMK_COMBO(six,   &kp N6,        RM0 RT0,     DEF, COMBO_TERM_FAST)
ZMK_COMBO(seven, &kp N7,        RM1 RT1,     DEF, COMBO_TERM_FAST)
ZMK_COMBO(eight, &kp N8,        RM2 RT2,     DEF, COMBO_TERM_FAST)
ZMK_COMBO(nine,  &kp N9,        RM3 RT3,     DEF, COMBO_TERM_FAST)
