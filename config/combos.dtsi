// use global-quick-tap-ms for combos (requires PR 1387)
#undef COMBO_HOOK
#define COMBO_HOOK global-quick-tap-ms = <100>;

#define COMBO_TERM_FAST 50
#define COMBO_TERM_SLOW 50

// left ctrl cluster
ZMK_COMBO(ctrl,    &kp LCTRL,     LM5 LB5,     DEF, COMBO_TERM_FAST)

// number row is between row 2 and 3
ZMK_COMBO(grave, &kp GRAVE,     LM5 LT5,     DEF NAV, COMBO_TERM_SLOW)
ZMK_COMBO(one,   &kp N1,        LM4 LT4,     DEF, COMBO_TERM_FAST)
ZMK_COMBO(two,   &kp N2,        LM3 LT3,     DEF, COMBO_TERM_FAST)
ZMK_COMBO(three, &kp N3,        LM2 LT2,     DEF, COMBO_TERM_FAST)
