// brackets cluster
ZMK_COMBO(rpar, &kp RPAR,      LM2 LM0,     NAV, COMBO_TERM_FAST)
ZMK_COMBO(rbkt, &kp RBKT,      LM2 LM1,     NAV, COMBO_TERM_FAST)
